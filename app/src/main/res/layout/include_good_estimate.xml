<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/good_estimate_layout"
        style="@style/base_padding_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="@dimen/text_font_7"
            android:background="#0f0f0f" />

        <TextView
            android:id="@+id/good_estimate_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="商品评价"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/good_estimate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width5"
            android:layout_toEndOf="@+id/good_estimate_view"
            android:text="(123)"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/good_favorable_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="满意度100%"
            android:textColor="@color/baseRedColor"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_image" />

    </RelativeLayout>

    <TextView
        android:id="@+id/estmate_item"
        style="@style/base_padding_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="#666666"
        android:textSize="12sp" />

</LinearLayout>