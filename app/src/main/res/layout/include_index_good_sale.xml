<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_padding_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--左-->
    <RelativeLayout
        android:id="@+id/today_sales"
        android:layout_width="0dp"
        android:layout_height="@dimen/height90"
        android:layout_marginEnd="@dimen/height8"
        android:layout_weight="1"
        android:background="@drawable/bg_bai01"
        android:padding="@dimen/margin10">

        <!--图片-->
        <ImageView
            android:id="@+id/fistpage_hdjx_limage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_corner_border_grey"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/big_image01" />

        <TextView
            android:id="@+id/fistpage_hdjx_jrtj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fistpage_hdjx_limage"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@mipmap/fistactivity_huo"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:text="今日特价"
            android:textColor="@color/blackColor4d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fistpage_hdjx_yhmrgx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fistpage_hdjx_jrtj"
            android:maxLines="1"
            android:text="优惠每日更新"
            android:textColor="@color/blackColor4d"
            android:textSize="10sp" />

        <!--立即疯抢按钮-->
        <TextView
            android:id="@+id/fistpage_hdjx_snapup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/fistactivity_jrtj_button"
            android:drawableRight="@mipmap/fistactivity_right"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="立即疯抢"
            android:textColor="@color/whiteColor"
            android:textSize="10sp" />
    </RelativeLayout>

    <!--右-->
    <RelativeLayout
        android:id="@+id/group_buying"
        android:layout_width="0dp"
        android:layout_height="@dimen/height90"
        android:layout_marginStart="@dimen/height8"
        android:layout_weight="1"
        android:background="@drawable/bg_bai01"
        android:padding="@dimen/margin10">
        <!--图片-->
        <ImageView
            android:id="@+id/fistpage_hdjx_rimage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_corner_border_grey"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/big_image01" />

        <TextView
            android:id="@+id/fistpage_hdjx_bypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/fistactivity_star"
            android:maxLines="1"
            android:text="别样拼团"
            android:textColor="@color/blackColor4d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fistpage_hdjx_czyhdno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fistpage_hdjx_bypt"
            android:maxLines="1"
            android:text="超值优惠等你哦"
            android:textColor="@color/blackColor4d"
            android:textSize="10sp" />

        <!--进入专区按钮-->
        <TextView
            android:id="@+id/fistpage_hdjx_prefecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/fistactivity_jrtj_button"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/fistactivity_right"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="进入专区"
            android:textColor="@color/whiteColor"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>